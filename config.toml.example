# TaskWarrior-CalDAV Sync Configuration
#
# This file should be placed at: ~/.config/twcaldav/config.toml

# CalDAV server configuration
[caldav]
# URL to your CalDAV server (with username if needed in the URL path)
url = "https://caldav.example.com/dav/calendars/username/"
# Or for Nextcloud: "https://nextcloud.example.com/remote.php/dav/calendars/username/"
# Or for Radicale: "http://localhost:5232/username/"

# Authentication credentials
username = "your-username"
password = "your-password"

# Synchronization behavior
[sync]
# Enable hard deletion of tasks when deleted on either side
# - true: Tasks deleted on one side will be permanently deleted on the other
# - false: Tasks deleted in TaskWarrior will set CalDAV todo to CANCELLED status
#          Tasks deleted/cancelled in CalDAV will NOT be deleted from TaskWarrior
delete_tasks = false

# Project-Calendar mappings
# Each mapping links a TaskWarrior project to a CalDAV calendar
# Tasks in unmapped projects will NOT be synced

[[mappings]]
taskwarrior_project = "work"
caldav_calendar = "Work Tasks"

[[mappings]]
taskwarrior_project = "personal"
caldav_calendar = "Personal"

[[mappings]]
taskwarrior_project = "home"
caldav_calendar = "Home"
